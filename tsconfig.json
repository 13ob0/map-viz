{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "declarationDir": "./lib/types/",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
